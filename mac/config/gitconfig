[alias]
    l = log --pretty=oneline -n 20 --graph --abbrev-commit
    s = status
    c = commit
    d = diff
    br = branch
    ce = checkout
    ds = diff --staged
    last = log -1
    date = log --pretty=fuller
    logp = log --graph --oneline --pretty
    logone = log --oneline
    pullr = pull --rebase
    pulr = pullr
    uncommit = reset HEAD^
    # ${1} - base, ${2} - second branch
    branchdiff = "!f() { git log ${1}..${2} ${3}; }; f"
    bd = branchdiff
    branches = branch -a
    remotes = remote -v
    whichcommit = branch --contains

[merge]
    log = true

[push]
    default = matching

[user]
    name = Ivaylo Tsankov
    email = itsankoff@gmail.com

[pager]
    branch = false

[init]
    defaultBranch = master

[advice]
    addIgnoredFile = false
